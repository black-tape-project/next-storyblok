{
    "extends": [
        "next/core-web-vitals",
        "plugin:storybook/recommended",
        "plugin:tailwindcss/recommended",
        "prettier"
    ],
    "plugins": ["tailwindcss", "prettier"],
    "rules": {
        "prettier/prettier": "error",
        "tailwindcss/no-custom-classname": "off"
    },
    "overrides": [
        {
            "files": ["*.stories.@(js|jsx)"]
        }
    ]
}
